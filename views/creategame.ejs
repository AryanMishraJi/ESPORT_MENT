<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Game Event Information</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex justify-center items-center">

  <div class="bg-white p-8 rounded-lg shadow-lg w-96">
    <h2 class="text-center text-2xl font-bold text-gray-800 mb-6">Game Event Information</h2>
    
    <form action="/create" method="POST">

      <!-- Event Image URL -->
      <div class="mb-4">
        <label for="image" class="block text-sm font-medium text-gray-700 mb-1">Event Image URL</label>
        <input type="text" name="image" id="image" placeholder="Enter image URL" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <!-- Select Game -->
      <div class="mb-4">
        <label for="game" class="block text-sm font-medium text-gray-700 mb-1">Select Game</label>
        <select name="game" id="game" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
          <option value="" disabled selected>Select a game</option>
          <option value="BattleGrounds Mobile India">BattleGrounds Mobile India</option>
          <option value="Free Fire">Free Fire</option>
          <option value="Valorant">Valorant</option>
          <option value="Mini Militia">Mini Militia</option>
        </select>
      </div>

      <!-- Event Date -->
      <div class="mb-4">
        <label for="date" class="block text-sm font-medium text-gray-700 mb-1">Event Date (MM/DD/YYYY)</label>
        <input type="text" name="date" id="date" placeholder="MM/DD/YYYY" pattern="\d{2}/\d{2}/\d{4}" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <!-- Event Time -->
      <div class="mb-4">
        <label for="time" class="block text-sm font-medium text-gray-700 mb-1">Event Time (HH:MM AM/PM)</label>
        <input type="text" name="time" id="time" placeholder="HH:MM AM/PM" pattern="(1[0-2]|0[1-9]):[0-5][0-9] (AM|PM)" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <!-- Organizer -->
      <div class="mb-4">
        <label for="organizer" class="block text-sm font-medium text-gray-700 mb-1">Organizer</label>
        <input type="text" name="organizer" id="organizer" placeholder="Enter organizer's name" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <div class="mb-4">
        <label for="teamSize" class="block text-sm font-medium text-gray-700 mb-1">Organizer</label>
        <input type="text" name="teamSize" id="teamSize" placeholder="Enter team size " class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <!-- Entry Fee -->
      <div class="mb-4">
        <label for="entry_fee" class="block text-sm font-medium text-gray-700 mb-1">Entry Fee (in INR)</label>
        <input type="text" name="entry_fee" id="entry_fee" placeholder="Enter entry fee amount" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <!-- Prize Pool -->
      <div class="mb-4">
        <label for="prizepool" class="block text-sm font-medium text-gray-700 mb-1">Prize Pool (in INR)</label>
        <input type="text" name="prizepool" id="prizepool" placeholder="Enter prize pool amount" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit" class="w-full bg-blue-600 text-white px-3 py-2 rounded-lg hover:bg-blue-700">Submit Event</button>
      </div>
      
    </form>
  </div>

</body>
</html>
